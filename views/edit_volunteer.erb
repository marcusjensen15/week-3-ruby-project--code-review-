<h1>Edit <%= @volunteer.name() %></h1>

<form action="/home/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title">Rename Volunteer</label>
  <input id="name" name="name" type="text" class="form-control">


  <button type="submit" class="btn btn-primary">Rename Volunteer</button>

</form>

<form action="/home/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-primary">Delete Volunteer</button>
</form>
