<form action="/home/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename Project</label>
  <input id="title" name="title" type="text" class="form-control">


  <button type="submit" class="btn btn-primary">Project Name</button>

</form>

<form action="/home/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-primary">Delete Project</button>
</form>
